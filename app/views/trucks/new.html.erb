<div class="row">
  <div class="col-md-8">
    <%= image_tag("truck.png")%>
  </div>

  <div class="col-md-4" id="edit">
    <em><h2>Add New Truck</h2></em>

<%= form_for @truck, url: user_trucks_path(@user) do |form| %>

  <div class="field">
    <h5 class="truck-h5"><%= form.label :name %></h5>
    <br />
    <%= form.text_field :name , class: "form-control" %>
  </div>
  <div class="field">
    <h5 class="truck-h5"><%= form.label :location %></h5>
    <br />
    <%= form.text_field :location , class: "form-control" %>
  </div>
  <div class="field">
    <h5 class="truck-h5"><%= form.label :menu %></h5>
    <br />
    <%= form.text_field :menu , class: "form-control" %>
  </div>
  <div class="field">
    <h5 class="truck-h5"><%= form.label :hours %></h5>
    <br />
    <%= form.text_field :hours , class: "form-control" %>
  </div>

  <div class="actions">
    <button class="btn"><%= form.submit %></button>
  </div>

  <% end %>
  </div>
</div>
<button class="btn"><%= link_to 'Back', user_trucks_path %></button>
