<!DOCTYPE html>
<html>
  <head>
    <title>GriddleMeet</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">


      <ul>
        <li>
          <%= button_to "Sign In", new_user_session_path, class: "signin" %>
        </li>
        <li>
          <%= link_to "Sign Out", destroy_user_session_path, :method => :delete, class: "signout" %>
        </li>
        <li>
          <%= link_to "Sign Up", new_user_registration_path, class: "signout" %>
        </li>
      </ul>

    </div>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>

  </body>
</html>
